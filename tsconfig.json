{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
